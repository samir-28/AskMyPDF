@{
    ViewData["Title"] = "Home";
}

<div class="landing-container">
    <div class="hero-section">
        <div class="hero-content">
            <div class="icon-wrapper">
                <i class="fas fa-robot"></i>
            </div>
            <h1 class="hero-title">AskMyPDF</h1>
            <p class="hero-subtitle">Upload your PDF and ask questions. Get instant answers powered by Ollama.</p>

            <div class="features">
                <div class="feature-item">
                    <i class="fas fa-upload"></i>
                    <span>Upload PDF</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-comments"></i>
                    <span>Ask Questions</span>
                </div>
                <div class="feature-item">
                    <i class="fas fa-bolt"></i>
                    <span>Get Instant Answers</span>
                </div>
            </div>

            <a href="/Chat" class="btn-primary btn-large">
                Get Started
                <i class="fas fa-arrow-right"></i>
            </a>

            <div class="info-box">
                <i class="fas fa-info-circle"></i>
                <span>No login required.Safe,Secure And Private.</span>
            </div>
        </div>
    </div>

    <div class="how-it-works">
        <h2>How It Works</h2>
        <div class="steps">
            <div class="step">
                <div class="step-number">1</div>
                <div class="step-content">
                    <h3>Upload PDF</h3>
                    <p>upload any PDF document less than 50 Mb</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">2</div>
                <div class="step-content">
                    <h3>Ollama Process</h3>
                    <p>Ollama analyzes and understands your document</p>
                </div>
            </div>
            <div class="step">
                <div class="step-number">3</div>
                <div class="step-content">
                    <h3>Ask & Learn</h3>
                    <p>Ask questions and get accurate answers instantly</p>
                </div>
            </div>
        </div>
    </div>
</div>